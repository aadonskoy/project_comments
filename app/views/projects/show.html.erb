<div id="projects">
  <h1 class="font-bold text-2xl"><%= @project.title %></h1>
  <div class="float-right rounded-full bg-gray-100 p-1"><%= @project.state.humanize %></div>
  <%= render "status", project: @project %>

  <div class="mt-3">
    <%= @project.description %>
  </div>

</div>

<div id="comments" class="mt-6">
  <h3 class="font-bold text-lg">Comments</h3>

  <%= render @project.comments %>

  <div class="mt-4">
    <%= render "comments/form", project: @project, comment: @new_comment %>
  </div>
</div>

<%= link_to "To Projects List", projects_path, class: "btn mb-3 bg-gray-100" %>
