<%= form_with(model: [project, comment], class: "mb-7") do |form| %>
  <div class="mb-5">
    <%= form.text_field :username, placeholder: "Username", class: "inline-block w-96 px-3 py-2 mt-2 shadow rounded-md border border-gray-200 outline-none" %>
    <%= form.text_field :text, placeholder: "Text", class: "inline-block w-96 px-3 py-2 mt-2 shadow rounded-md border border-gray-200 outline-none" %>
    <%= form.submit "Add comment", class: "btn py-2 ml-2 bg-blue-600 text-white" %>
  </div>
<% end %>
